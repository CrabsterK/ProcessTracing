@model ProcessTracing.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security

@{
    var p = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes().FirstOrDefault();
    using (Html.BeginForm("ExternalLogin", "Account"))
    {
            <div id="socialLoginList">
                <button type="submit" hidden="hidden"></button>
            </div>
    }
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }))
    {
                @Html.AntiForgeryToken()
            <div id="socialLoginList">
                <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Zaloguj się użając @p.Caption account">Zaloguj się</button>
            </div>
           }   
}

